{
    "manifest_version": 3,
    "name": "Text Summarizer",
    "version": "1.0",
    "description": "Summarize text using BART model",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon1.png"
      }
    }
  }
  